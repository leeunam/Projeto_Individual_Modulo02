<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="../style.css" rel="stylesheet" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;800&family=Plus+Jakarta+Sans:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <title>Simples - Editar Evento</title>
  </head>
  <body style="padding: 0; align-items: flex-start; background: #f9fafb">
    <div class="page-container">
      <div id="header-placeholder"></div>

      <main class="main-content">
        <div class="main-layout">
          <div class="form-sections">
            <section class="form-section create-form-left">
              <div class="page-header">
                <h1 class="form-title">Editar Evento</h1>
                <p class="form-subtitle">Altere os dados do seu evento</p>
              </div>

              <% if (typeof error !== 'undefined' && error) { %>
              <div
                class="error-message"
                style="
                  background-color: #fee;
                  color: #c33;
                  padding: 10px;
                  border-radius: 5px;
                  margin-bottom: 15px;
                "
              >
                <%= error %>
              </div>
              <% } %> <% if (typeof success !== 'undefined' && success) { %>
              <div
                class="success-message"
                style="
                  background-color: #efe;
                  color: #363;
                  padding: 10px;
                  border-radius: 5px;
                  margin-bottom: 15px;
                "
              >
                <%= success %>
              </div>
              <% } %>

              <form
                class="form-container"
                method="POST"
                action="/evento/<%= event.id %>/editar"
              >
                <div class="input-group">
                  <label for="name" class="input-label create-label"
                    >Nome do Evento *</label
                  >
                  <div class="input-box">
                    <input
                      id="name"
                      name="name"
                      type="text"
                      value="<%= event.name %>"
                      placeholder="Ex: Conferência de Tecnologia"
                      class="create-input"
                      required
                    />
                  </div>
                </div>

                <div class="input-group">
                  <label for="event_date" class="input-label create-label"
                    >Data *</label
                  >
                  <div class="input-box">
                    <input
                      id="event_date"
                      name="event_date"
                      type="date"
                      value="<%= event.event_date.toISOString().split('T')[0] %>"
                      class="create-input"
                      required
                    />
                  </div>
                </div>

                <div class="input-group">
                  <label for="event_time" class="input-label create-label"
                    >Hora *</label
                  >
                  <div class="input-box">
                    <input
                      id="event_time"
                      name="event_time"
                      type="time"
                      value="<%= event.event_time %>"
                      class="create-input"
                      required
                    />
                  </div>
                </div>

                <div class="input-group">
                  <label class="input-label create-label"
                    >Localização do Evento *</label
                  >

                  <div class="input-group">
                    <label for="street" class="input-label create-label"
                      >Rua *</label
                    >
                    <div class="input-box">
                      <input
                        id="street"
                        name="street"
                        type="text"
                        value="<%= event.street %>"
                        placeholder="Ex: Rua Augusta"
                        class="create-input"
                        required
                      />
                    </div>
                  </div>

                  <div class="input-group">
                    <label for="number" class="input-label create-label"
                      >Número *</label
                    >
                    <div class="input-box">
                      <input
                        id="number"
                        name="number"
                        type="number"
                        value="<%= event.number %>"
                        placeholder="Ex: 123"
                        class="create-input"
                        required
                        min="1"
                      />
                    </div>
                  </div>

                  <div class="input-group">
                    <label for="district" class="input-label create-label"
                      >Bairro *</label
                    >
                    <div class="input-box">
                      <input
                        id="district"
                        name="district"
                        type="text"
                        value="<%= event.district %>"
                        placeholder="Ex: Consolação"
                        class="create-input"
                        required
                      />
                    </div>
                  </div>

                  <div class="input-group">
                    <label for="cep" class="input-label create-label"
                      >CEP *</label
                    >
                    <div class="input-box">
                      <input
                        id="cep"
                        name="cep"
                        type="text"
                        value="<%= event.cep %>"
                        placeholder="Ex: 01305-100"
                        class="create-input"
                        required
                        maxlength="9"
                      />
                    </div>
                  </div>
                </div>

                <div class="input-group">
                  <label for="description" class="input-label create-label"
                    >Descrição *</label
                  >
                  <div class="input-box">
                    <textarea
                      id="description"
                      name="description"
                      placeholder="Descreva seu evento..."
                      class="create-textarea"
                      required
                    >
<%= event.description %></textarea
                    >
                  </div>
                </div>

                <div
                  class="form-actions"
                  style="display: flex; gap: 15px; margin-top: 20px"
                >
                  <button type="submit" class="create-event-btn">
                    Salvar Alterações
                  </button>
                  <a
                    href="/gerenciar"
                    class="create-event-btn"
                    style="
                      background: #6b7280;
                      text-decoration: none;
                      text-align: center;
                      line-height: 40px;
                    "
                  >
                    Cancelar
                  </a>
                </div>
              </form>
            </section>

            <section class="form-section create-form-right">
              <div class="image-upload-container">
                <div class="upload-content">
                  <div class="upload-icon">✏️</div>
                  <span class="upload-text">Editar Evento</span>
                  <p class="upload-subtitle">
                    Altere as informações do seu evento
                  </p>
                </div>
              </div>
            </section>
          </div>
        </div>
      </main>
    </div>

    <script src="../scripts.js"></script>
  </body>
</html>
