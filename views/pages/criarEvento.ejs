<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="../style.css" rel="stylesheet" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;800&family=Plus+Jakarta+Sans:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <title>Simples - Criar Evento</title>
  </head>
  <body style="padding: 0; align-items: flex-start; background: #f9fafb">
    <div class="page-container">
      <div id="header-placeholder"></div>

      <main class="main-content">
        <div class="main-layout">
          <div class="form-sections">
            <section class="form-section create-form-left">
              <div class="page-header">
                <h1 class="form-title">Criar Evento</h1>
              </div>

              <% if (typeof error !== 'undefined' && error) { %>
              <div
                class="error-message"
                style="
                  background-color: #fee;
                  color: #c33;
                  padding: 10px;
                  border-radius: 5px;
                  margin-bottom: 15px;
                "
              >
                <%= error %>
              </div>
              <% } %> <% if (typeof success !== 'undefined' && success) { %>
              <div
                class="success-message"
                style="
                  background-color: #efe;
                  color: #363;
                  padding: 10px;
                  border-radius: 5px;
                  margin-bottom: 15px;
                "
              >
                <%= success %>
              </div>
              <% } %>

              <form class="form-container" method="POST" action="/api/events">
                <div class="input-group">
                  <label for="name" class="input-label create-label"
                    >Nome do Evento *</label
                  >
                  <div class="input-box">
                    <input
                      id="name"
                      name="name"
                      type="text"
                      placeholder="Ex: Confer√™ncia de Tecnologia"
                      class="create-input"
                      required
                    />
                  </div>
                </div>

                <div class="input-group">
                  <label for="event_date" class="input-label create-label"
                    >Data *</label
                  >
                  <div class="input-box">
                    <input
                      id="event_date"
                      name="event_date"
                      type="date"
                      class="create-input"
                      required
                    />
                  </div>
                </div>

                <div class="input-group">
                  <label for="event_time" class="input-label create-label"
                    >Hora *</label
                  >
                  <div class="input-box">
                    <input
                      id="event_time"
                      name="event_time"
                      type="time"
                      class="create-input"
                      required
                    />
                  </div>
                </div>

                <div class="input-group">
                  <label class="input-label create-label"
                    >Localiza√ß√£o do Evento *</label
                  >

                  <% if (typeof selectedAddress !== 'undefined' &&
                  selectedAddress) { %>
                  <div
                    class="address-selected"
                    style="
                      background: #f0f9ff;
                      border: 2px solid #0ea5e9;
                      border-radius: 8px;
                      padding: 15px;
                      margin-bottom: 10px;
                    "
                  >
                    <div
                      style="
                        display: flex;
                        justify-content: space-between;
                        align-items: center;
                      "
                    >
                      <div>
                        <p style="margin: 0; font-weight: 500; color: #0369a1">
                          üìç <%= selectedAddress.street %>, <%=
                          selectedAddress.number %>
                        </p>
                        <p
                          style="
                            margin: 5px 0 0 0;
                            color: #64748b;
                            font-size: 14px;
                          "
                        >
                          <%= selectedAddress.district %> - CEP: <%=
                          selectedAddress.cep %>
                        </p>
                      </div>
                      <a
                        href="/adicionarEndereco"
                        style="
                          background: #0ea5e9;
                          color: white;
                          padding: 8px 12px;
                          border-radius: 6px;
                          text-decoration: none;
                          font-size: 14px;
                        "
                      >
                        Alterar
                      </a>
                    </div>
                  </div>
                  <input
                    type="hidden"
                    name="address_id"
                    value="<%= selectedAddress.id %>"
                  />
                  <% } else { %>
                  <div
                    class="address-placeholder"
                    style="
                      border: 2px dashed #d1d5db;
                      border-radius: 8px;
                      padding: 30px;
                      text-align: center;
                      background: #f9fafb;
                    "
                  >
                    <p style="margin: 0; color: #6b7280; margin-bottom: 15px">
                      Nenhum endere√ßo adicionado
                    </p>
                    <a
                      href="/adicionarEndereco"
                      class="create-event-btn"
                      style="
                        display: inline-block;
                        background: #0ea5e9;
                        color: white;
                        padding: 12px 24px;
                        border-radius: 6px;
                        text-decoration: none;
                      "
                    >
                      + Adicionar Localiza√ß√£o
                    </a>
                  </div>
                  <% } %>
                </div>

                <div class="input-group">
                  <label for="description" class="input-label create-label"
                    >Descri√ß√£o *</label
                  >
                  <div class="input-box">
                    <textarea
                      id="description"
                      name="description"
                      placeholder="Descreva seu evento..."
                      class="create-textarea"
                      required
                    ></textarea>
                  </div>
                </div>

                <button type="submit" class="create-event-btn" id="submitBtn">
                  Criar Evento
                </button>
              </form>
            </section>

            <section class="form-section create-form-right">
              <div class="image-upload-container">
                <button type="button" class="image-upload" id="imageUploadBtn">
                  <div class="upload-content">
                    <div class="upload-icon">üì∑</div>
                    <span class="upload-text">Anexe uma imagem de capa</span>
                    <p class="upload-subtitle">
                      Clique para selecionar uma imagem
                    </p>
                  </div>
                </button>
                <input
                  type="file"
                  id="imageInput"
                  accept="image/*"
                  style="display: none"
                />
              </div>
            </section>
          </div>
        </div>
      </main>
    </div>

    <script src="../scripts.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        setupFormValidation();
      });

      function setupFormValidation() {
        const form = document.getElementById('createEventForm');

        if (!form) {
          console.error('Formul√°rio n√£o encontrado!');
          return;
        }

        form.addEventListener('submit', function (event) {
          const submitBtn = document.getElementById('submitBtn');
          submitBtn.disabled = true;
          submitBtn.textContent = 'Criando evento...';
        });
      }
    </script>
  </body>
</html>
