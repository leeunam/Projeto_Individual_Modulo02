<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="../style.css" rel="stylesheet" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;800&family=Plus+Jakarta+Sans:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <title>Simples - Criar Evento</title>
  </head>
  <body style="padding: 0; align-items: flex-start; background: #f9fafb">
    <div class="page-container">
      <div id="header-placeholder"></div>

      <main class="main-content">
        <div class="main-layout">
          <div class="form-sections">
            <section class="form-section create-form-left">
              <div class="page-header">
                <h1 class="form-title">Criar Evento</h1>
              </div>

              <form class="form-container" id="createEventForm">
                <div class="input-group">
                  <label for="eventName" class="input-label create-label"
                    >Nome do Evento</label
                  >
                  <div class="input-box">
                    <input
                      id="eventName"
                      name="eventName"
                      type="text"
                      placeholder="Ex: Confer√™ncia de Tecnologia"
                      class="create-input"
                      required
                    />
                  </div>
                </div>

                <div class="input-group">
                  <label for="eventDate" class="input-label create-label"
                    >Data</label
                  >
                  <div class="input-box">
                    <input
                      id="eventDate"
                      name="eventDate"
                      type="date"
                      class="create-input"
                      required
                      min=""
                      max=""
                    />
                  </div>
                  <small class="date-helper-text"
                    >Eventos podem ser criados at√© 2 anos no futuro</small
                  >
                </div>

                <div class="input-group">
                  <label for="eventLocation" class="input-label create-label"
                    >Localiza√ß√£o</label
                  >
                  <div class="input-box">
                    <input
                      id="eventLocation"
                      name="eventLocation"
                      type="text"
                      placeholder="Rua, n¬∫ - Bairro, CEP"
                      class="create-input"
                      required
                    />
                  </div>
                </div>

                <div class="input-group">
                  <label for="eventTime" class="input-label create-label"
                    >Hora</label
                  >
                  <div class="input-box">
                    <input
                      id="eventTime"
                      name="eventTime"
                      type="time"
                      class="create-input"
                      required
                    />
                  </div>
                </div>

                <div class="input-group">
                  <label for="eventDescription" class="input-label create-label"
                    >Descri√ß√£o</label
                  >
                  <div class="input-box">
                    <textarea
                      id="eventDescription"
                      name="eventDescription"
                      placeholder="Descreva seu evento..."
                      class="create-textarea"
                      required
                    ></textarea>
                  </div>
                </div>

                <button type="submit" class="create-event-btn">
                  Criar Evento
                </button>
              </form>
            </section>

            <section class="form-section create-form-right">
              <div class="image-upload-container">
                <button type="button" class="image-upload" id="imageUploadBtn">
                  <div class="upload-content">
                    <div class="upload-icon">üì∑</div>
                    <span class="upload-text">Anexe uma imagem de capa</span>
                    <p class="upload-subtitle">
                      Clique para selecionar uma imagem
                    </p>
                  </div>
                </button>
                <input
                  type="file"
                  id="imageInput"
                  accept="image/*"
                  style="display: none"
                />
              </div>
            </section>
          </div>
        </div>
      </main>
    </div>

    <script src="../scripts.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        setDateLimits();
        setupImageUpload();
        setupFormValidation();
      });

      function setDateLimits() {
        const dateInput = document.getElementById('eventDate');
        const today = new Date();

        const minDate = today.toISOString().split('T')[0];

        const maxDate = new Date(
          today.getFullYear() + 2,
          today.getMonth(),
          today.getDate()
        );
        const maxDateString = maxDate.toISOString().split('T')[0];

        dateInput.setAttribute('min', minDate);
        dateInput.setAttribute('max', maxDateString);

        console.log(`Data m√≠nima: ${minDate}`);
        console.log(`Data m√°xima: ${maxDateString}`);
      }

      function setupImageUpload() {
        const uploadBtn = document.getElementById('imageUploadBtn');
        const fileInput = document.getElementById('imageInput');

        uploadBtn.addEventListener('click', function () {
          fileInput.click();
        });

        fileInput.addEventListener('change', function (event) {
          const file = event.target.files[0];
          if (file) {
            if (!file.type.startsWith('image/')) {
              alert('Por favor, selecione apenas arquivos de imagem.');
              return;
            }

            if (file.size > 5 * 1024 * 1024) {
              alert('A imagem deve ter no m√°ximo 5MB.');
              return;
            }

            const reader = new FileReader();
            reader.onload = function (e) {
              const uploadContent = document.querySelector('.upload-content');
              uploadContent.innerHTML = `
                            <img src="${e.target.result}" alt="Preview" style="width: 100%; height: 100%; object-fit: cover; border-radius: 8px;">
                            <div style="position: absolute; bottom: 16px; left: 50%; transform: translateX(-50%); background: rgba(0,0,0,0.7); color: white; padding: 8px 16px; border-radius: 4px; font-size: 12px;">
                                Clique para alterar
                            </div>
                        `;
            };
            reader.readAsDataURL(file);
          }
        });
      }

      function setupFormValidation() {
        const form = document.getElementById('createEventForm');

        form.addEventListener('submit', function (event) {
          event.preventDefault();

          const dateInput = document.getElementById('eventDate');
          const selectedDate = new Date(dateInput.value);
          const today = new Date();
          const maxDate = new Date(
            today.getFullYear() + 2,
            today.getMonth(),
            today.getDate()
          );

          if (selectedDate < today) {
            alert('A data do evento n√£o pode ser no passado.');
            dateInput.focus();
            return;
          }

          if (selectedDate > maxDate) {
            alert('A data do evento n√£o pode ser mais de 2 anos no futuro.');
            dateInput.focus();
            return;
          }

          const timeInput = document.getElementById('eventTime');
          if (dateInput.value === today.toISOString().split('T')[0]) {
            const selectedTime = timeInput.value;
            const currentTime =
              today.getHours().toString().padStart(2, '0') +
              ':' +
              today.getMinutes().toString().padStart(2, '0');

            if (selectedTime < currentTime) {
              alert('A hora do evento n√£o pode ser no passado.');
              timeInput.focus();
              return;
            }
          }

          submitForm();
        });
      }

      function submitForm() {
        const form = document.getElementById('createEventForm');
        const formData = new FormData(form);

        const imageFile = document.getElementById('imageInput').files[0];
        if (imageFile) {
          formData.append('eventImage', imageFile);
        }

        const submitBtn = document.querySelector('.create-event-btn');
        const originalText = submitBtn.textContent;
        submitBtn.textContent = 'Criando...';
        submitBtn.disabled = true;
        submitBtn.classList.add('loading');

        setTimeout(() => {
          console.log('Evento criado com sucesso!');
          console.log('Dados do formul√°rio:', Object.fromEntries(formData));

          alert('Evento criado com sucesso!');
          window.location.href = 'gerenciar.html';
        }, 2000);
      }
    </script>
  </body>
</html>
